<section class="admin-categories-new">

  <header class="page-header">
  <h1>Admin &raquo; New Category</h1>
  </header>

  <div class="well">
    <%= link_to 'All Categories', [:admin, :categories], class: 'btn btn-info' %>
  </div>

  <div class="form-group">
    <%= form_for [:admin, @category] do |form| %>
      <p> <%= form.label :category %> </p>
      <p> <%= form.text_field :name, class: 'form-control' %> </p>

      <p><%= form.submit 'Create Category', class: 'btn btn-primary' %> </p>
    <% end %>
  </div>

</section>
